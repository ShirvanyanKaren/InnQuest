// script.js

$(document).ready(function() {

  const rooms = [
    { id: 1, type: 'single', price: 100, available: true, amenities: ['WiFi', 'TV'] },
    { id: 2, type: 'double', price: 150, available: true, amenities: ['WiFi', 'TV', 'Mini-bar'] },
    { id: 3, type: 'suite', price: 250, available: false, amenities: ['WiFi', 'TV', 'Mini-bar', 'Jacuzzi'] }
  ];

  // Function to display room listings based on user search
  function displayRooms(checkin, checkout, guests, roomType) {
   
    const filteredRooms = rooms.filter(room => {
      return room.available && room.type === roomType;
    });

    // Clear previous listings
    $('#room-cards').empty();

    // Display filtered rooms
    filteredRooms.forEach(room => {
      $('#room-cards').append(`
        <div class="room-card">
          <h3>${room.type} Room</h3>
          <p>Price: $${room.price} per night</p>
          <p>Amenities: ${room.amenities.join(', ')}</p>
          <button onclick="bookRoom(${room.id})">Book Now</button>
        </div>
      `);
    });
  }

  // Function to handle form submission
  $('#booking-form').submit(function(event) {
    event.preventDefault();
    const checkinDate = $('#checkin-date').val();
    const checkoutDate = $('#checkout-date').val();
    const guests = $('#guests').val();
    const roomType = $('#room-type').val();

    // Perform validation (e.g., check if dates are valid, guests > 0, roomType selected)

    // Display rooms based on search criteria
    displayRooms(checkinDate, checkoutDate, guests, roomType);
  });

  // Function to simulate booking (replace with actual booking logic)
  function bookRoom(roomId) {
    alert(`Room ${roomId} booked!`);
  }
});
